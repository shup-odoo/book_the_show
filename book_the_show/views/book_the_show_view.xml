<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id='book_the_show_action' model='ir.actions.act_window'>
        <field name="name">Book The Show</field>
        <field name="res_model">book.the.show</field>
        <field name="view_mode">tree,form,kanban,gantt</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No movie Found. Let's create one!
            </p>
            <p>
                Currently no movie is streaming
            </p>
        </field>
<!--        <field name="context">{'search_default_status': 1}</field>-->
    </record>


    <!--    Tree View For Book The Show-->

    <record id="book_the_show_tree_view" model="ir.ui.view">
        <field name="name">book.the.show.tree.view</field>
        <field name="model">book.the.show</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" class="oe_status_decorate">
                <field name="mv_name"/>
                <field name="mv_description"/>
                <field name="mv_release_date"/>
                <field name="mv_duration" widget="float_time"/>
                <field name="mv_rating"/>
                <field name="status"/>
                <field name="mv_screen_type_ids" widget="many2many_tags" options="{'color_field':'color'}"/>
                <field name="mv_language_ids" widget="many2many_tags" options="{'color_field':'color'}"/>
                <field name="mv_genres_ids" widget="many2many_tags" options="{'color_field':'color'}"/>
            </tree>
        </field>
    </record>


    <!--    Form View For Book The Show-->

    <record id="view_movie_form" model="ir.ui.view">
        <field name="name">book.the.show.form.view</field>
        <field name="model">book.the.show</field>
        <field name="arch" type="xml">
            <form string="property_view">
                <header>
                    <field name="status" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <field name="mv_image" nolabel="1" widget="image" class="oe_right oe_avatar"/>
                    <group>
                        <field name="mv_name"/>
                        <field name="mv_description"/>
                        <field name="mv_release_date"/>
                        <field name="mv_duration" widget="float_time"/>
                        <field name="mv_rating"/>
                        <field name="status"/>
                        <field name="mv_screen_type_ids" widget="many2many_tags" options="{'color_field':'color'}"/>
                        <field name="mv_language_ids" widget="many2many_tags" options="{'color_field':'color'}"/>
                        <field name="mv_genres_ids" widget="many2many_tags" options="{'color_field':'color'}"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- kanban view -->


    <record id="book_the_show_kanban" model="ir.ui.view">
        <field name="name">book.the.show.kanban.view</field>
        <field name="model">book.the.show</field>
        <field name="arch" type="xml">
            <kanban class="o_res_partner_kanban">
                <field name="mv_name"/>
                <field name="mv_release_date"/>
                <field name="mv_screen_type_ids"/>
                <field name="id"/>
                <field name="mv_image"/>
                <field name="mv_image" widget="image" class="oe_avatar"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click ">
                            <div class="o_kanban_image_fill_left o_kanban_image_full d-none d-md-block"
                                 t-attf-style="background-image:url('#{background_image}')">
                                <img class="o_kanban_image_full"
                                     t-att-alt="record.id.value"
                                     t-att-src="kanban_image('book.the.show', 'mv_image', record.id.raw_value)"/>
                            </div>
                            <div>
                                <strong class="o_kanban_record_title">
                                    <span>
                                        <h2>
                                            <field name="mv_name"/>
                                        </h2>
                                    </span>
                                </strong>
                            </div>
                            <div class="col-12">Release Date :
                                <field name="mv_release_date"/>
                            </div>
                            <div class="col-12">
                                <field name="mv_screen_type_ids" widget="many2many"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!--    Search View -->

    <record id="book_the_show_search_view" model="ir.ui.view">
        <field name="name">book.the.show.search.view</field>
        <field name="model">book.the.show</field>
        <field name="arch" type="xml">
            <search string="Book The Show">
                <field name="mv_name"/>
                <field name="mv_screen_type_ids"/>
                <field name="mv_language_ids"/>
                <field name="mv_genres_ids"/>
                <field name="status"/>
                <group expand="1" string="Group By">
                    <filter string="Available" name="status"
                            domain="[('status','in',['new','coming_soon','just_released'])]"/>
                    <filter string="Screen Type" name="mv_screen_type_ids" context="{'group_by':'mv_screen_type_ids'}"/>
                    <filter string="Movie Genres" name="mv_genres_ids" context="{'group_by':'mv_genres_ids'}"/>
                    <filter string="Movie Languages" name="mv_language_ids" context="{'group_by':'mv_language_ids'}"/>
                    <filter string="Movie status" name="status" context="{'group_by':'status'}"/>
                </group>
            </search>
        </field>
    </record>


    <record id="view_seat_reservation_gantt" model="ir.ui.view">
        <field name="name">seat.reservation.gantt</field>
        <field name="model">book.the.show</field>
        <field name="arch" type="xml">
            <gantt string="Theater Seat Reservations" date_start="mv_release_date" date_stop="mv_release_date">
                <field name="mv_name"/>
                <field name="mv_screen_type_ids"/>
                <field name="mv_language_ids"/>
                <field name="mv_genres_ids"/>
                <!-- Add any other fields you want to display in the Gantt view -->
            </gantt>
        </field>
    </record>


    <menuitem id="first_level_menu" name="Movie" web_icon="book_the_show,static/description/icon.png">
        <menuitem id="menu_finance_receivables" name="Movie" sequence="1">
            <menuitem id="menu_pro" name="Movie List" action="book_the_show_action"/>
            <menuitem id="menu_pro_setting" name="Movie Genres" action="movie_genres_action"/>
            <menuitem id="menu_pro_ava" name="Screen Type" action="screen_type_action"/>
            <menuitem id="menu_pro_av" name="Languages" action="movie_language_action"/>
        </menuitem>


        <menuitem id="menu_advertisement" name="Show" sequence="2">
            <menuitem id="menu_adv_market" name="Show Timing" action="show_timing_action"/>
            <menuitem id="menu_adv_market1" name="Ticket Booking" action="ticket_booking_action"/>
        </menuitem>
    </menuitem>
</odoo>