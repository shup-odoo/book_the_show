<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id='book_the_show_action' model='ir.actions.act_window'>
        <field name="name">Book The Show</field>
        <field name="res_model">book.the.show</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No movie Found. Let's create one!
            </p>
            <p>
                Currently no movie is streaming
            </p>
        </field>
    </record>


    <!--    Tree View For Book The Show-->

    <record id="book_the_show_tree_view" model="ir.ui.view">
        <field name="name">book.the.show.tree.view</field>
        <field name="model">book.the.show</field>
        <field name="arch" type="xml">
            <tree>
                <field name="mv_name"/>
                <field name="mv_description"/>
                <field name="mv_release_date"/>
                <field name="mv_duration" widget="float_time"/>
                <field name="mv_rating"/>
                <field name="mv_screen_type_ids"/>
                <field name="mv_language_ids"/>
                <field name="mv_genres_ids"/>
            </tree>
        </field>
    </record>


    <!--    Form View For Book The Show-->

    <record id="view_movie_form" model="ir.ui.view">
        <field name="name">book.the.show.form.view</field>
        <field name="model">book.the.show</field>
        <field name="arch" type="xml">
            <form string="property_view">
                <sheet>
                    <field name="mv_image" widget="image" class="oe_avatar"/>
                    <group>
                        <field name="mv_name"/>
                        <field name="mv_description"/>
                        <field name="mv_release_date"/>
                        <field name="mv_duration" widget="float_time"/>
                        <field name="mv_rating"/>
                        <field name="mv_screen_type_ids" widget="many2many_tags"/>
                        <field name="mv_language_ids" widget="many2many_tags"/>
                        <field name="mv_genres_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- kanban view -->
    <record id="book_the_show_kanban" model="ir.ui.view">
        <field name="name">book.the.show.kanban.view</field>
        <field name="model">book.the.show</field>
        <field name="arch" type="xml">
            <kanban class="o_res_partner_kanban">
                <field name="mv_name"/>
                <field name="mv_image" widget="image" class="oe_avatar"/>
                <templates>
                    <t t-name="kanban-box">
                        <ul>
                            <field name="mv_name"/>
                            <field name="mv_image" widget="image" class="oe_avatar"/>
                        </ul>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!--    Search View -->

    <record id="book_the_show_search_view" model="ir.ui.view">
        <field name="name">book.the.show.search.view</field>
        <field name="model">book.the.show</field>
        <field name="arch" type="xml">
            <search string="Book The Show">
                <field name="mv_name"/>
                <field name="mv_screen_type_ids"/>
                <field name="mv_language_ids"/>
                <field name="mv_genres_ids"/>
                <group expand="1" string="Group By">
                    <filter string="Screen Type" name="mv_screen_type_ids" context="{'group_by':'mv_screen_type_ids'}"/>
                    <filter string="Movie Genres" name="mv_genres_ids" context="{'group_by':'mv_genres_ids'}"/>
                    <filter string="Movie Languages" name="mv_language_ids" context="{'group_by':'mv_language_ids'}"/>
                </group>
            </search>
        </field>
    </record>


    <menuitem id="first_level_menu" name="Movie">
        <menuitem id="menu_finance_receivables" name="Movie" sequence="1">
            <menuitem id="menu_pro" name="Movie List" action="book_the_show_action"/>
            <menuitem id="menu_pro_setting" name="Movie Genres" action="movie_genres_action"/>
            <menuitem id="menu_pro_ava" name="Screen Type" action="screen_type_action"/>
            <menuitem id="menu_pro_av" name="Languages" action="movie_language_action"/>
        </menuitem>


        <menuitem id="menu_advertisement" name="Show" sequence="2">
            <menuitem id="menu_adv_market" name="Show Timing" action="show_timing_action"/>
            <menuitem id="menu_adv_market1" name="Ticket Booking" action="ticket_booking_action"/>
        </menuitem>
    </menuitem>
</odoo>