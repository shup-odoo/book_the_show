<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id='show_timing_action' model='ir.actions.act_window'>
        <field name="name">Show Time</field>
        <field name="res_model">movie.show.time</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No show Found. Let's create one!
            </p>
            <p>
                Currently no show is streaming
            </p>
        </field>
    </record>

    <!--    tree view for show time-->

    <record id="view_movie_screen_tree" model="ir.ui.view">
        <field name="name">movie.show.time.tree.view</field>
        <field name="model">movie.show.time</field>
        <field name="arch" type="xml">
            <tree>
                <field name="st_movie_name"/>
                <field name="st_start_time"/>
                <field name="st_screen_number"/>
                <field name="st_screen_type"/>
                <field name="st_language"/>
            </tree>
        </field>
    </record>


    <!--    Form View For show time-->

    <record id="view_movie_screen_form" model="ir.ui.view">
        <field name="name">movie.show.time.form</field>
        <field name="model">movie.show.time</field>
        <field name="arch" type="xml">
            <form string="Movie Screen">
                <sheet>
                    <group>
                        <field name="st_movie_name"/>
                        <field name="st_start_time"/>
                        <field name="st_screen_number"/>
                        <field name="st_screen_type" widget="many2many_tags"/>
                        <field name="st_language" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>